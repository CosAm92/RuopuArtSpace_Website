<div class="container">
    <h2>Search Authors</h2>
    <form action="/authors" method="GET">
        <label>Name</label>
        <div class="input-group">
            <input type="text" name="name" class="form-control rounded" value="<%= searchOptions.name %>">
            <button type="submit" class="btn btn-outline-primary">Search</button>
        </div>
    </form>
    <br>
    <% authors.forEach(author=> { %>
        <div>
            <%= author.name %>
        </div>
        <a href="/authors/<%= author.id%>" class="btn btn-primary">View</a>
        <a href="/authors/<%= author.id%>/edit" class="btn btn-info">Edit</a>
        <%- include('../partials/deleteForm', 
        {url: `/authors/${author.id}`}) %> 
        <% }) %>
</div>